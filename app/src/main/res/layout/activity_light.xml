<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:weightSum="4"
    tools:context=".lightActivity">

    <Button
        android:id="@+id/light0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@drawable/open_left_btn"
        android:text="开关1 - 打开"
        android:textSize="22sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/light1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@drawable/close_left_btn"
        android:text="开关2 - 打开"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/light2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@drawable/open_right_btn"
        android:text="开关3 - 打开"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/light3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/close_right_btn"
        android:text="开关4 - 打开"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>